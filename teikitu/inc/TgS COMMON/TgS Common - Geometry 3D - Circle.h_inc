                                                /** @brief Invalidate the geometry object (circle)
                                                    @param[out] OUT Pointer to the geometry object (circle) */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Reset)( VEC_OBJ_T(TgCIRCLE,PCU) OUT );

                                                /** @brief Validate the integrity of the geometry object (circle)
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return True if the geometry object (circle) is valid and false otherwise */
TgEXTN TgBOOL                                   FCN_VO(tgGM_CI_Is_Valid)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Determine the point on the geometry object (circle) that is furthest along the direction of ARG1
                                                    @param[in] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a direction vector
                                                    @return The point on the geometry object (circle) that is furthest along the direction of ARG1 */
TgEXTN VEC_T(1)                                 FCN_VO(tgGM_CI_Support_Point)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Calculate the surface area of the geometry object (circle)
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The surface area of the geometry object (circle) */
TgINLINE VAR_T()                                FCN_VO(tgGM_CI_Area)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Calculate the minimum necessary Axis-Aligned Bounding Box to contain the geometry object (circle)
                                                    @param[out] ARG0 Pointer to an axis-aligned bounding box object
                                                    @param[in] ARG1 Pointer to a geometry object (circle) */
TgEXTN TgVOID                                   FCN_VO(tgGM_CI_BA)( VEC_OBJ_T(TgBOXAA,PCU) ARG0, VEC_OBJ_T(TgCIRCLE,CPCU) ARG1 );

                                                /** @brief Calculate the minimum necessary Axis-Aligned Bounding Box to contain the swept geometry object (circle)
                                                    @param[out] ARG0 Pointer to an axis-aligned bounding box object
                                                    @param[in] ARG1 Pointer to a geometry object (circle)
                                                    @param[in] ARG2 Pointer to a vector describing the swept direction and magnitude */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Sweep_BA)( VEC_OBJ_T(TgBOXAA,PCU) ARG0, VEC_OBJ_T(TgCIRCLE,CPCU) ARG1, VEC_T(1,CPCU) ARG2 );

                                                /** @brief Project the geometry object (circle) along the direction vector
                                                    @param[out] OUT0 Pointer to a scalar value to hold the lower bound of the projection
                                                    @param[out] OUT1 Pointer to a scalar value to hold the upper bound of the projection
                                                    @param[in] ARG2 Pointer to a geometry object (circle)
                                                    @param[in] ARG3 Pointer to a direction vector */
TgEXTN TgVOID                                   FCN_VO(tgGM_CI_Project)( VAR_T(PCU) ARG0, VAR_T(PCU) ARG1, VEC_OBJ_T(TgCIRCLE,CPCU) ARG2, VEC_T(1,CPCU) ARG3 );

                                                /** @brief Test to see if a point is either on or in the geometry object (circle)
                                                    @param[in] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a position vector
                                                    @return True if the position is either on or in the geometry object (circle) and false otherwise */
TgINLINE TgBOOL                                 FCN_VO(tgGM_CI_Is_Contained)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Transform the geometry object (circle) at ARG0 by the matrix at ARG1
                                                    @param[in,out] ARG0 Pointer to a geometry object
                                                    @param[in] ARG1 Column-Major matrix (3x4) containing rotation and translation */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_TX)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_04_3_T(CPCU) ARG1 );

                                                /** @brief Transform the geometry object (circle) at ARG1 by the matrix at ARG2 and store it in ARG0
                                                    @param[out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a geometry object (circle)
                                                    @param[in] ARG2 Column-Major matrix (3x4) containing rotation and translation */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Copy_TX)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_OBJ_T(TgCIRCLE,CPCU) ARG1, VEC_04_3_T(CPCU) ARG2 );


                                                /** @brief Initialize a new geometry object (circle) with the function arguments
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a basis vector - First basis vector on the plane
                                                    @param[in] ARG2 Pointer to a normal vector - Normal to the plane
                                                    @param[in] ARG3 Pointer to a basis vector - Second basis vector on the plane
                                                    @param[in] ARG4 Pointer to a position vector - Origin
                                                    @param[in] ARG5 Scalar Value for the radius */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Init)(
                                                    VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_T(1,CPCU) ARG1, VEC_T(1,CPCU) ARG2, VEC_T(1,CPCU) ARG3, VEC_T(1,CPCU) ARG4, VAR_T(C) ARG5 );

                                                /** @brief Initialize a new geometry object (circle) with the function arguments
                                                    @param[out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1  Column-Major matrix (3x4) containing rotation (basis vectors) and origin
                                                    @param[in] ARG2 Scalar Value for the radius */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Init_3D)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_04_3_T(CPCU) ARG1, VAR_T(C) ARG2 );

                                                /** @brief Copy the one geometry object (circle) to another of the same type
                                                    @param[out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a geometry object (circle) */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Copy)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_OBJ_T(TgCIRCLE,CPCU) ARG1 );


                                                /** @brief Set the origin
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a position vector */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_Origin)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Set the specified basis vector
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Basis vector index [0-2]
                                                    @param[in] ARG2 Pointer to a basis vector */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_Axes_Unit_Index)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, TgRSIZE_C ARG1, VEC_T(1,CPCU) ARG2 );

                                                /** @brief Set the first basis vector on the plane
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a basis vector */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_U)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Set the normal of the plane
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a normal vector */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_Normal)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Set the second basis vector on the plane
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Pointer to a basis vector */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_V)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_T(1,CPCU) ARG1 );

                                                /** @brief Set all three of the basis vectors and the origin
                                                    @note Orthogonality of the basis vectors is the responsibility of the caller
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Column-Major matrix (3x4) containing rotation (basis vectors) and origin */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_3D)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VEC_04_3_T(CPCU) ARG1 );

                                                /** @brief Set the radius
                                                    @param[in,out] ARG0 Pointer to a geometry object (circle)
                                                    @param[in] ARG1 Scalar Value */
TgINLINE TgVOID                                 FCN_VO(tgGM_CI_Set_Radius)( VEC_OBJ_T(TgCIRCLE,PCU) ARG0, VAR_T(C) ARG1 );


                                                /** @brief Return the origin
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The origin */
TgINLINE VEC_T(1,CP)                            FCN_VO(tgGM_CI_Query_Origin)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Return the first basis vector on the plane
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The first basis vector on the plane */
TgINLINE VEC_T(1,CP)                            FCN_VO(tgGM_CI_Query_U)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Return the normal of the plane
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The normal of the plane */
TgINLINE VEC_T(1,CP)                            FCN_VO(tgGM_CI_Query_Normal)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Return the second basis vector on the plane
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The second basis vector on the plane */
TgINLINE VEC_T(1,CP)                            FCN_VO(tgGM_CI_Query_V)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Return the radius
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The radius */
TgINLINE VAR_T()                                FCN_VO(tgGM_CI_Query_Radius)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );

                                                /** @brief Return the radius squared
                                                    @param[in] ARG Pointer to a geometry object (circle)
                                                    @return The radius squared */
TgINLINE VAR_T()                                FCN_VO(tgGM_CI_Query_Radius_Sq)( VEC_OBJ_T(TgCIRCLE,CPCU) ARG );
